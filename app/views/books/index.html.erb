<p id="notice"></p>
    <h2>Books</h2>

    <table>
        <tr>
            <th> <strong>Title</strong></th>
            <th> <strong>Body</strong></th>
        </tr>
        <%# ループ処理each %>
        <% @books.each do |book| %>
        <tr>
            <td>
                <%= book.title %>
            </td>
            <td>
                <%= book.body %>
            </td>
            <td>
            <%= link_to 'Show', books_path(@book) %>
            </td>
            <td>
            <%= link_to 'Edit', books_path(@book) %>
            </td>
        </tr>
        <% end %>
    </table>

    <h3> <strong>New book</strong></h3>
    <%# ここにクリエイトボックスform_forヘルパーをつくる %>
    <%= form_for (@book) do |f| %>
        <h5> Title</h5>
        <%= f.text_field :title %>
        <h5> Body</h5>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Create Book' %>
    <% end %>

